<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.igeak.test.geakapidemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
        <activity android:name="com.igeak.test.geakapidemo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.igeak.test.geakapidemo.DataTransferActivity"
            android:label="@string/data"
            android:parentActivityName="com.igeak.test.geakapidemo.MainActivity"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.igeak.test.geakapidemo.MainActivity" />
        </activity>
        <activity
            android:name="com.igeak.test.geakapidemo.SensorActivity"
            android:label="@string/title_activity_sensor"
            android:parentActivityName="com.igeak.test.geakapidemo.MainActivity"
            android:uiOptions="splitActionBarWhenNarrow" />
        <activity
            android:name="com.igeak.test.geakapidemo.StepActivity"
            android:label="@string/title_activity_step"
            android:parentActivityName="com.igeak.test.geakapidemo.MainActivity"
            android:uiOptions="splitActionBarWhenNarrow" />
        <activity
            android:name="com.igeak.test.geakapidemo.WeatherActivity"
            android:label="@string/title_activity_weather"
            android:parentActivityName="com.igeak.test.geakapidemo.MainActivity"
            android:uiOptions="splitActionBarWhenNarrow" />
        <activity
            android:name="com.igeak.test.geakapidemo.CardActivity"
            android:label="@string/title_activity_card"
            android:parentActivityName="com.igeak.test.geakapidemo.MainActivity"
            android:uiOptions="splitActionBarWhenNarrow" />
        <activity
            android:name="com.igeak.test.geakapidemo.UiActivity"
            android:label="@string/title_activity_ui"
            android:parentActivityName="com.igeak.test.geakapidemo.MainActivity"
            android:uiOptions="splitActionBarWhenNarrow" />
    </application>

</manifest>
